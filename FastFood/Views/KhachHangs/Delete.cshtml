@model FastFood.Models.KhachHang

@{
    ViewData["Title"] = "Xóa khách hàng";
}

<h2 class="page-title text-danger">⚠ Xóa khách hàng</h2>
<hr />

<div class="alert alert-warning shadow-sm">
    <strong>Bạn có chắc chắn muốn xóa khách hàng này không?</strong>
</div>

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3">Họ tên</dt>
        <dd class="col-sm-9">@Model.HoTen</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Số điện thoại</dt>
        <dd class="col-sm-9">@Model.Sdt</dd>

        <dt class="col-sm-3">Địa chỉ mặc định</dt>
        <dd class="col-sm-9">@Model.DiaChiMacDinh</dd>
    </dl>

    <form asp-action="Delete" method="post" class="d-flex justify-content-between mt-3">
        <input type="hidden" asp-for="MaKh" />
        <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
        <button type="submit" class="btn btn-danger">🗑 Xóa</button>
    </form>
</div>
