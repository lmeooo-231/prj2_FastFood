@model IEnumerable<FastFood.Models.KhachHang>

@{
    ViewData["Title"] = "Danh sách khách hàng";
}

<h1 class="mb-3">👥 Danh sách khách hàng</h1>

<!-- 🔙 Nút quay lại Dashboard -->
<a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary mb-3">
    ⬅ Quay lại Dashboard
</a>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Thêm khách hàng</a>
</p>

<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Mật khẩu</th>
            <th>Địa chỉ mặc định</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HoTen</td>
                <td>@item.Email</td>
                <td>@item.Sdt</td>
                <td>
                    <!-- 👁 Nút xem mật khẩu -->
                    <div class="input-group">
                        <input type="password" id="passwordInput-@item.MaKh" value="@item.MatKhau" class="form-control" readonly />
                        <button type="button" class="btn btn-outline-secondary togglePasswordBtn" data-target="passwordInput-@item.MaKh">
                            👁 Xem
                        </button>
                    </div>
                </td>
                <td>@item.DiaChiMacDinh</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.MaKh" class="btn btn-sm btn-warning">✏ Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.MaKh" class="btn btn-sm btn-info">ℹ Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.MaKh" class="btn btn-sm btn-danger">🗑 Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
