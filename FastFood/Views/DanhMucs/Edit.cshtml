@model FastFood.Models.DanhMuc

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<h1 class="page-title">✏ Chỉnh sửa danh mục</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="MaDm" />

                    <div class="form-group mb-3">
                        <label asp-for="TenDm" class="form-label">Tên danh mục</label>
                        <input asp-for="TenDm" class="form-control" placeholder="Nhập tên danh mục" />
                        <span asp-validation-for="TenDm" class="text-danger"></span>
                    </div>

                    <div class="form-group text-end">
                        <input type="submit" value="💾 Lưu thay đổi" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

