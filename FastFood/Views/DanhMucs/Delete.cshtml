@model FastFood.Models.DanhMuc

@{
    ViewData["Title"] = "Xóa danh mục";
}

<h1 class="page-title text-danger">⚠ Xóa danh mục</h1>
<p class="text-muted">Bạn có chắc chắn muốn xóa danh mục này? Hành động này không thể hoàn tác.</p>

<div class="row">
    <div class="col-md-6">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white fw-bold">
                Thông tin danh mục
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Tên danh mục</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TenDm)</dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-3">
                    <input type="hidden" asp-for="MaDm" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
                        <button type="submit" class="btn btn-danger">🗑 Xóa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

</style>
