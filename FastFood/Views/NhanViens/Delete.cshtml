@model FastFood.Models.NhanVien

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<h2 class="page-title text-danger">🗑 Xóa nhân viên</h2>
<hr />

<div class="alert alert-warning">
    <strong>Bạn có chắc chắn muốn xóa nhân viên này không?</strong>
</div>

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3">Họ tên</dt>
        <dd class="col-sm-9">@Model.HoTen</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Số điện thoại</dt>
        <dd class="col-sm-9">@Model.Sdt</dd>

        <dt class="col-sm-3">Vai trò</dt>
        <dd class="col-sm-9">@Model.VaiTro</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaNv" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">⬅ Quay lại</a>
            <button type="submit" class="btn btn-danger">🗑 Xóa ngay</button>
        </div>
    </form>
</div>
