@model FastFood.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h1 class="page-title">📋 Chi tiết sản phẩm</h1>
<hr />

<div class="card shadow-sm border-0">
    <div class="row g-0">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-4 text-center p-3">
            <img src="~/images/@Model.Anh"
                 alt="@Model.TenSp"
                 class="product-img img-fluid rounded shadow" />
        </div>

        <!-- Thông tin chi tiết -->
        <div class="col-md-8">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Tên sản phẩm</dt>
                    <dd class="col-sm-9">@Model.TenSp</dd>

                    <dt class="col-sm-3">Mô tả</dt>
                    <dd class="col-sm-9">@Model.MoTa</dd>

                    <dt class="col-sm-3">Giá bán</dt>
                    <dd class="col-sm-9 text-danger fw-bold">
                        @string.Format("{0:N0} ₫", Model.Gia)
                    </dd>

                    <dt class="col-sm-3">Danh mục</dt>
                    <dd class="col-sm-9">@Model.MaDmNavigation?.TenDm</dd>
                </dl>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.MaSp" class="btn btn-primary">✏ Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>
