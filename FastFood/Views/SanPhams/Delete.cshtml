@model FastFood.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h1 class="page-title text-danger">⚠ Xóa sản phẩm</h1>
<p class="text-muted">Bạn có chắc chắn muốn xóa sản phẩm này? Hành động này không thể hoàn tác.</p>

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white fw-bold">
                Thông tin sản phẩm
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Tên sản phẩm</dt>
                    <dd class="col-sm-9">@Model.TenSp</dd>

                    <dt class="col-sm-3">Mô tả</dt>
                    <dd class="col-sm-9">@Model.MoTa</dd>

                    <dt class="col-sm-3">Giá</dt>
                    <dd class="col-sm-9 text-danger fw-bold">
                        @Model.Gia.ToString("N0") ₫
                    </dd>

                    <dt class="col-sm-3">Ảnh</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Anh))
                        {
                            <img src="~/images/@Model.Anh" alt="@Model.TenSp" class="product-img" />
                        }
                        else
                        {
                            <span class="text-muted">Không có ảnh</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Danh mục</dt>
                    <dd class="col-sm-9">@Model.MaDmNavigation?.TenDm</dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-3">
                    <input type="hidden" asp-for="MaSp" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
                        <button type="submit" class="btn btn-danger">🗑 Xóa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

