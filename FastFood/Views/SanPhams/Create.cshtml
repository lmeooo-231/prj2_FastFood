@model FastFood.Models.SanPham

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<h1 class="page-title">➕ Thêm sản phẩm mới</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data" class="shadow-sm p-4 bg-light rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="TenSp" class="form-label">Tên sản phẩm</label>
                <input asp-for="TenSp" class="form-control" placeholder="Nhập tên sản phẩm" />
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MoTa" class="form-label">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Mô tả chi tiết..."></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gia" class="form-label">Giá bán (VNĐ)</label>
                <input asp-for="Gia" class="form-control" type="number" step="1000" placeholder="Nhập giá" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Anh" class="form-label">Hình ảnh</label>
                <input asp-for="Anh" type="file" class="form-control" />
                <span asp-validation-for="Anh" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaDm" class="form-label">Danh mục</label>
                <select asp-for="MaDm" class="form-control" asp-items="ViewBag.MaDm">
                    <option value="">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="MaDm" class="text-danger"></span>
            </div>

            <div class="form-group text-end">
                <button type="submit" class="btn btn-success">💾 Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

