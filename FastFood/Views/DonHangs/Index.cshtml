@model IEnumerable<FastFood.Models.DonHang>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<h2>📦 Danh sách đơn hàng</h2>
<hr />

<!-- 🔙 Nút quay lại Dashboard -->
<a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary mb-3">
    ⬅ Quay lại Dashboard
</a>

<!-- 👉 Chỉ Admin mới thấy nút tạo đơn hàng -->
@if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Admin")
{
    <p>
        <a asp-action="Create" class="btn btn-success">+ Tạo đơn hàng mới</a>
    </p>
}

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dh in Model)
        {
            <tr>
                <td>@dh.MaDh</td>
                <td>@dh.MaKhNavigation?.HoTen</td>
                <td>@dh.NgayDat?.ToString("dd/MM/yyyy")</td>
                <td>@($"{dh.TongTien:N0} đ")</td>
                <td>@dh.TrangThai</td>
                <td>
                    <a asp-action="Details" asp-route-id="@dh.MaDh" class="btn btn-sm btn-info">Chi tiết</a>

                    @if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Admin")
                    {
                        <a asp-action="Edit" asp-route-id="@dh.MaDh" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@dh.MaDh" class="btn btn-sm btn-danger">Xóa</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
