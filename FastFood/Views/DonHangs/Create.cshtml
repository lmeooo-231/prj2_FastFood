@model FastFood.Models.DonHang

@{
    ViewData["Title"] = "Tạo đơn hàng";
}

<h1 class="page-title">➕ Tạo đơn hàng</h1>

<div class="card custom-card shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="NgayDat" class="form-label fw-bold">📅 Ngày đặt</label>
                <input asp-for="NgayDat" class="form-control" type="date" />
                <span asp-validation-for="NgayDat" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TrangThai" class="form-label fw-bold">📌 Trạng thái</label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhuongThucTt" class="form-label fw-bold">💳 Phương thức thanh toán</label>
                <input asp-for="PhuongThucTt" class="form-control" />
                <span asp-validation-for="PhuongThucTt" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TongTien" class="form-label fw-bold">💰 Tổng tiền</label>
                <input asp-for="TongTien" class="form-control" />
                <span asp-validation-for="TongTien" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MaKh" class="form-label fw-bold">👤 Khách hàng</label>
                <select asp-for="MaKh" class="form-select" asp-items="ViewBag.MaKh"></select>
                <span asp-validation-for="MaKh" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">⬅ Quay lại</a>
                <button type="submit" class="btn btn-success">💾 Lưu</button>
            </div>
        </form>
    </div>
</div>
