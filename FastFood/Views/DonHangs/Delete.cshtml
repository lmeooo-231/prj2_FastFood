@model FastFood.Models.DonHang

@{
    ViewData["Title"] = "Xóa đơn hàng";
}

<h1 class="page-title text-danger">🗑 Xóa đơn hàng</h1>

<div class="card custom-card shadow-sm border-danger">
    <div class="card-body">
        <p class="alert alert-warning fw-bold">
            ⚠ Bạn có chắc chắn muốn xóa đơn hàng này không?
        </p>

        <dl class="row details-list">
            <dt class="col-sm-3 fw-bold">📅 Ngày đặt</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayDat)</dd>

            <dt class="col-sm-3 fw-bold">📌 Trạng thái</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TrangThai)</dd>

            <dt class="col-sm-3 fw-bold">💳 Thanh toán</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PhuongThucTt)</dd>

            <dt class="col-sm-3 fw-bold">💰 Tổng tiền</dt>
            <dd class="col-sm-9">@Model.TongTien.ToString("N0") ₫</dd>

            <dt class="col-sm-3 fw-bold">👤 Khách hàng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MaKhNavigation.MaKh)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="MaDh" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">⬅ Quay lại</a>
                <button type="submit" class="btn btn-danger">🗑 Xóa</button>
            </div>
        </form>
    </div>
</div>
