@model FastFood.Models.KhachHang
@{
    ViewData["Title"] = "Đăng ký khách hàng";
}

<h2>Đăng ký</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="RegisterCustomer" method="post">
    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Số điện thoại</label>
        <input asp-for="Sdt" class="form-control" />
    </div>

    <div class="form-group">
        <label>Mật khẩu</label>
        <input asp-for="MatKhau" type="password" class="form-control" />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Địa chỉ</label>
        <input asp-for="DiaChiMacDinh" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Đăng ký</button>
    <a asp-action="LoginCustomer" class="btn btn-link">Đăng nhập</a>
</form>
 