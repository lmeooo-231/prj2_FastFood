@model IEnumerable<FastFood.Models.SanPham>

<h2 class="mb-4">🔍 Kết quả tìm kiếm cho: "@ViewBag.Keyword"</h2>

@if (!Model.Any())
{
    <p class="text-muted fst-italic">Không tìm thấy sản phẩm nào.</p>
}
else
{
    <div class="row">
        @foreach (var sp in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="~/image/@sp.Anh"
                         alt="@sp.TenSp"
                         class="card-img-top"
                         style="height:180px;object-fit:cover" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@sp.TenSp</h5>
                        <p class="card-text small text-muted text-truncate">@sp.MoTa</p>
                        <p class="fw-bold text-danger">@sp.Gia.ToString("N0") đ</p>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <a asp-controller="Home"
                           asp-action="ChiTietSanPham"
                           asp-route-id="@sp.MaSp"
                           class="btn btn-sm btn-outline-info">
                            Chi tiết
                        </a>
                        <a asp-controller="GioHangs"
                           asp-action="ThemVaoGio"
                           asp-route-id="@sp.MaSp"
                           class="btn btn-sm btn-success">
                            Thêm vào giỏ
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
